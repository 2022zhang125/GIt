<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hbsfdxwlxy.competition.mapper.UserMapper">
    <insert id="insertUser">
        insert into t_user(id,username,password) values(#{id},#{username},#{password});
    </insert>
    <select id="selectUser" resultType="com.hbsfdxwlxy.competition.pojo.User">
        select username,password from t_user where username=#{username} and password=#{password};
    </select>
    <select id="selectName" resultType="com.hbsfdxwlxy.competition.pojo.User">
        select username from t_user where username = #{username};
    </select>
</mapper>